extends layout

mixin memory(p, r, msg)
  .step.slide(data-x=p[0], data-y=p[1], data-z=p[2], data-rotate-x=r[0], data-rotate-y=r[1], data-rotate-z=r[2])
    p= msg

block content
  .memories-container
    #impress(data-transition-duration="1000")
      for m in memories
        mixin memory(m.pos, m.rot, m.msg)
  .side-bar

  script(src='/js/impress.js')
  script(src='/js/memories.js')
