extends layout

mixin memory(p, r, msg)
  .step.slide.memory-slide(data-x=p[0], data-y=p[1], data-z=p[2], data-rotate-x=r[0], data-rotate-y=r[1], data-rotate-z=r[2])
    p= msg

block content
  .memories-container
    #impress(data-transition-duration="2000")
      for m in memories
        mixin memory(m.pos, m.rot, m.msg)
  .side-bar
    .border
      .arrow
          i.icon-pencil.icon-large.side-bar-icon
    .content-container
      .content
        .form.form-horizontal.hidden
          .control-group
            .controls
              input.email(type='text',placeholder='Email')
          .control-group
            .controls
              textarea.memory-text(rows='10',cols='30',placeholder='Write your Memory')
          .control-group
            .controls
              a.btn(value='Submit') Submit


  script(src='/js/impress.js')
  script(src='/js/memories.js')
  script(src='/js/bootstrap.min.js')
